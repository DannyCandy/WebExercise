@model IEnumerable<WebsiteBanHang.Models.Product>
@{
}
<h2>Products</h2>
<a asp-action="Add" class="mt-2 btn btn-primary">Create new</a>
<table class="table mt-2">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Images</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>
                    @if (product.ImageUrl is not null)
                    {
                        <img class="img-thumbnail" style="width: 100px;" src="@product.ImageUrl" alt="Product Image" />
                    }
                </td>
                <td>
                    <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-success">Detail</a> |
                    <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
