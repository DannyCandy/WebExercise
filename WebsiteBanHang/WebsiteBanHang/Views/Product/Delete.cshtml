@model WebsiteBanHang.Models.Product
@{
}
<h2>Are you sure you want to delete this?</h2>

<div>
    <h4 class="mt-2">Name: @Model.Name</h4>
    <h4 class="mt-2">Price: @Model.Price</h4>
    <h4 class="mt-2">Description: @Model.Description</h4>

    @if (Model.ImageUrl is not null)
    {
        <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail mt-2" style="width: 300px" />
    }
</div>

<form asp-action="Delete" method="post" class="mt-2">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-success">Cancel</a>
    
</form>

